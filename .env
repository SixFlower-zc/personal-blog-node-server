# 数据库配置
DBHOST= '127.0.0.1'  # 数据库服务器的地址
DBPORT= '27017'      # 数据库服务器的端口
DBNAME= 'test'       # 使用的数据库名称
DBUSER= 'sixflower'   # 数据库用户名（如果有认证需求）
DBPASS= 'sixflower'   # 数据库密码（如果有认证需求）

# 网站配置
SECRET_KEY= 'sixflower'  # 用于加密会话数据的密钥，保证网站安全性
PORT= '3000'              # 应用程序运行的端口号
BASE_URL= 'http://localhost:3000'  # 应用程序的基础URL，用于构建内部链接或响应中的绝对路径

# 邮件服务配置
MAIL_HOST= 'smtp.example.com'  # SMTP服务器地址
MAIL_PORT= '587'                 # SMTP服务器端口
MAIL_USER= 'user@example.com'    # 发件人邮箱地址
MAIL_PASS= 'password'          # 发件人邮箱密码

# 其他第三方服务配置
API_KEY= 'your_api_key'        # 第三方API的密钥
API_SECRET= 'your_api_secret'  # 第三方API的密钥

# 日志配置
LOG_LEVEL= 'debug'              # 日志级别，可选值包括 debug, info, warn, error, fatal
LOG_FILE= 'app.log'             # 日志文件的路径和名称

# 其他配置
TIME_ZONE= 'Asia/Shanghai'      # 应用程序使用的时区
DEBUG= 'true'                   # 是否开启调试模式
